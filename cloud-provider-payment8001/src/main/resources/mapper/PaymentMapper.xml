<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zpc.springcloud.dao.PaymentMapper">
        <insert id="create" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
            insert into payment(serial) values (#{Pserial});
        </insert>

        <resultMap id="PaymentMap" type="Payment">
            <result column="id" property="id" jdbcType="BIGINT"/>
            <result column="serial" property="orderStatus" jdbcType="VARCHAR"/>
        </resultMap>
        <select id="getPaymentById" parameterType="Long" resultMap="PaymentMap">
            select * from payment where id = #{id};
        </select>
</mapper>
